{
  "name": "GTrello",
  "version": "0.0.2",
  "manifest_version": 2,
  "description": "Googlize your trello !",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": [
      "src/bg/background.js"
    ],
    "persistent": true
  },
  "options_page": "src/settings/index.html",
  "page_action": {
    "default_icon": "icons/icon19.png",
    "default_title": "page action demo",
    "default_popup": "src/page_action/app/index.html"
  },
  "permissions": [
    "cookies",
    "tabs"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://mail.google.com/*"
        //will comming soon ! : "*://calendar.google.com/*"
      ],
      "js": [
        "src/inject/inject.js"
      ]
    }
  ],
  "web_accessible_resources": [
        "src/settings/index.html"
    ]
}