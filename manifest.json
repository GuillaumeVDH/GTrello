{
  "name": "GTrello",
  "version": "0.0.2",
  "manifest_version": 2,
  "description": "Googlize your trello !",
  "icons": {
    "19": "icons/icon-19.png",
    "256": "icons/icon-256.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": [
      "src/bg/jquery.min.js",
      "src/bg/trello_client.js",
      "src/bg/background.js"
    ],
    "persistent": true
  },
  "page_action": {
    "default_icon": "icons/icon-19.png",
    "default_title": "GTrello",
    "default_popup": "src/page_action/app/index.html"
  },
  "permissions": [
    "cookies",
    "tabs",
    "storage",
    "https://trello.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://mail.google.com/*"
      ],
      "js": [
        "src/inject/inject.js"
      ]
    }
  ],
  "web_accessible_resources": [
        "src/settings/index.html"
  ],
  "options_page": "src/settings/index.html"
}